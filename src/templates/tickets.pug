include _common

-
  var tickets = [
    {
      img: 'VIP',
      link: 'https://www.wmnetwork.cc/conference/detail/default_template.htm?mid=25821'
    },
    {
      img: 'normal',
      link: 'https://www.wmnetwork.cc/conference/detail/default_template.htm?mid=25821',
      selected: true
    }
  ]

mixin ticket-unit(ticket)
  div(class=`ticket-unit ${ticket.selected ? 'selected' : ''}`)
    .image(style=`background-image: url(${imagePath}tickets/ticket_${ticket.img}.png)`)
    a.text.pf-Medium(href=`${ticket.link}`, target="_blank").
      立即购票

mixin arrow(direction, move)
  .arrow
    div(class=`arrow-unit ${direction}`, data-move=move)

#tickets
  +title-bar('参会购票')
  .tickets-wrapper.selected-2
    each ticket in tickets
      +ticket-unit(ticket)
  .control-panel
    .bar-dots
      each ticket in tickets
        .dot-unit
    .bar-info
      +arrow('left', 1)
      .info-wrapper
        .info-text
          .text.
            *购票说明：本项目为全国联网销售，与现场座位一一对应，采用【短信电子票】模式，请用户在购买流程中填写准确的手机号。请于盛典当天，持官方通知短信，至盛典现场扫二维码验证入场。
      +arrow('right', -1)
